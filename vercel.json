{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "buildCommand": "next build",
    "headers": [
      {
        "source": "/(.*)",
        "headers": [
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          },
          {
            "key": "X-Frame-Options",
            "value": "DENY"
          },
          {
            "key": "X-XSS-Protection",
            "value": "1; mode=block"
          }
        ]
      }
    ],
    "functions": {
      "app/api/**/*.ts": {
        "runtime": "nodejs18.x"
      },
      "app/(login)/actions.ts": {
        "runtime": "nodejs18.x"
      }
    },
    "crons": [
      {
        "path": "/api/cron/daily-content",
        "schedule": "0 0 * * *"
      }
    ]
  }